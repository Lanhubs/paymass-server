{
  "name": "wallet-server",
  "version": "1.0.0",
  "description": "Wallet management server with BlockRadar integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "serve": "bun --hot index.ts",
    "clean": "rmdir /s /q dist 2>nul || true",
    "build": "tsc",
    "reset": "bun prisma db push --force-reset",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@solana/web3.js": "^1.87.0",
    "axios": "^1.6.0",
    "bs58": "^5.0.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.0",
    "express-validator": "^7.0.0",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "prisma": "5.19.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}