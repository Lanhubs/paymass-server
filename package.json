{
  "name": "wallet-server",
  "version": "1.0.0",
  "description": "Wallet management server with BlockRadar integration",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "serve": "bun --hot index.ts",
